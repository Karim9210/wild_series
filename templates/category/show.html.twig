{% extends 'base.html.twig' %}

{% block title %}Série:
{% endblock %}
{% block body %}
	<div>
		<h1>
			Results:

		</h1>
		{% for program in programs %}
			<div>


				<div class="card" style="width: 18rem;">
					<img src="..." class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{ program.id }}
							/
							{{ program.title}}</h5>
						<p class="card-text">{{ program.synopsis }}</p>
						<a href="{{ path("program_id", { id: program.id }) }}" class="btn btn-primary">Voir la fiche</a>
					</div>
				</div>
				{# <a href="{{ path("program_id", { id: program.id }) }}" class="btn btn-primary">Voir la fiche</a> #}
			</div>
		{% else %}
			<div>
				<h2>Aucune série trouvée.</h2>
			{% endfor %}
			<a class='text-white' href="{{ path('category_index') }}">
				Retour aux catégories
			</a>
		</div>
	{% endblock %}
